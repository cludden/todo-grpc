{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "es6",
      "esnext"
    ],
    "declaration": false,
    "noUnusedLocals": true,
    "noEmitOnError": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "target": "es5",
    "strict": true
  }
}