{
  "$id": "config",
  "type": "object",
  "description": "application configuration schema",
  "properties": {
    "graphql": {
      "type": "object",
      "default": {},
      "properties": {
        "enable_graphiql": {
          "type": "boolean",
          "default": false
        },
        "enable_mocking": {
          "type": "boolean",
          "default": false
        },
        "enable_voyager": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "http": {
      "type": "object",
      "default": {},
      "properties": {
        "port": {
          "type": "integer",
          "min": 0,
          "default": 3000
        }
      }
    },
    "log": {
      "type": "object",
      "default": {},
      "properties": {
        "level": {
          "enum": [
            "trace",
            "debug",
            "info",
            "warn",
            "error",
            "fatal"
          ],
          "default": "info"
        }
      }
    }
  }
}